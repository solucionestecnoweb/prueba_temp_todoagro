<odoo>

    <data noupdate="0">
        <record id="wizard_purchase_book" model="ir.ui.view">
            <field name="name">Purchase Book Report Wizard</field>
            <field name="model">purchase.book</field>
            <field name="arch" type="xml">
                <form string="Purchase Book">
                    <field invisible="1" name="state"/>
                    <div states="choose">
                        <group >
                            <group >
                                <field name="date_from" required="1"/>
                            </group>
                            <group >
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                    </div>
                    <div states="get">
                        <group>
                            <field name="name" colspan="4" invisible="1"/>
                            <field name="report" filename="name" colspan="4"/>
                        </group>
                    </div>
                    <footer states="choose">
                        <button name="generate_xls_report" string="Export XLS" type="object" class="oe_highlight" />
                        <button name="print_report" string="Export PDF" type="object" class="oe_highlight" />
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_purchase_book" model="ir.actions.act_window">
            <field name="name">Purchase Book</field>
            <field name="res_model">purchase.book</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_purchase_book"/>
            <field name="target">new</field>
        </record>

        <menuitem   name="Purchase Book" 
                    parent="account.menu_finance_reports"
                    id="purchase_book_menu" 
                    action="vat_purchase_book.action_purchase_book"
                    sequence="1"
                    />
    </data>

</odoo>